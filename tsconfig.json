{
  "compilerOptions": {
    "types": ["hardhat", "node", "inquirer"],
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["./test", "./src", "./scripts"],
  "files": ["./hardhat.config.ts"]
}